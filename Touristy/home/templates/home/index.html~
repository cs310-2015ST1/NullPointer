    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&signed_in=true&libraries=places&"></script>
    <script>
    function initialize() {

      var markers = [];
      var mapCanvas = document.getElementById('map-canvas');
      var VANCOUVER = new google.maps.LatLng(49.2827,-123.1207);
      var mapOptions = {
        mapTypeId: google.maps.MapTypeId.ROADMAP
        
      }
      var map = new google.maps.Map(mapCanvas, mapOptions)

 var northEastLatLng = new google.maps.LatLng(49.374374, -123.2741459);
  var southWestLatLng = new google.maps.LatLng(49.186495, -122.8231339);
      var defaultBounds = new google.maps.LatLngBounds(northEastLatLng, southWestLatLng);
  map.fitBounds(defaultBounds);

  /*embedding searchbar taken from google maps documentation,
  at: https://developers.google.com/maps/documentation/javascript/examples/places-searchbox
  */

  var input = (document.getElementById('pac-input'));
  map.controls[google.maps.ControlPosition.TOP_LEFT].push(input);
  var searchBox = new google.maps.places.SearchBox(input);
  var clickedMarker = null;
      // Listen for the event fired when the user selects an item from the
  // pick list. Retrieve the matching places for that item.
  //<button onclick='InstagramInit('{{ favorite.lat }}', '{{ favorite.lng }}', '{{ favorite.place_name }}')'> lol </button>
  {% if user.is_authenticated %}
       var favorite_markers = [
           {% for favorite in user.favorite_set.all %}
               [ "<button onclick= 'InstagramInit(\"{{favorite.lat}}\", \"{{favorite.lng}}\", \"{{favorite.place_name}}\")' > Get Photos! </button> <br> {{favorite.place_name}}",
                "{{ favorite.lat }}",
                "{{ favorite.lng }}"],
           {% endfor %}
       ];
       

        var favorite_infowindow = new google.maps.InfoWindow(), favorite_marker, i;
        for (i = 0; i < favorite_markers.length; i++) {  
        favorite_marker = new google.maps.Marker({
            position: new google.maps.LatLng(favorite_markers[i][1], favorite_markers[i][2]),
            map: map
        });
        google.maps.event.addListener(favorite_marker, 'click', (function(favorite_marker, i) {
            return function() {
                favorite_infowindow.setContent(favorite_markers[i][0]);
                favorite_infowindow.open(map, favorite_marker);
            }
        })(favorite_marker, i));
    }
        
  {% endif %}

  google.maps.event.addListener(searchBox, 'places_changed', function(){
    var places = searchBox.getPlaces();

    if (places.length == 0) {
      return;
    }
    for (var i = 0, marker; marker = markers[i]; i++) {
      marker.setMap(null);
    }
       // For each place, get the icon, place name, and location.
       markers = [];


       //setting upper and lower bounds for the map pan;
      var contentString = "<a href=\"/home/\">Get Photos!</a><br />";

        var bounds = new google.maps.LatLngBounds();
       for (var i = 0, place; place = places[i]; i++) {
            var image = {
              url: place.icon,
              size: new google.maps.Size(71, 71),
              origin: new google.maps.Point(0, 0),
              anchor: new google.maps.Point(17, 34),
              scaledSize: new google.maps.Size(25, 25)
            };
          // Create a marker for each place.
          var marker = new google.maps.Marker({
            map: map,
            icon: image,
            title: place.name,
            position: place.geometry.location,
            clickable: true
          });

           var infowindow = new google.maps.InfoWindow({
               content: ""
           });

           google.maps.event.addListener(marker, 'click', function() {
               infowindow.setContent('<button onclick="InstagramInit(\'' + this.getPosition().lat() + '\', \'' + this.getPosition().lng() + '\', \'' + this.getTitle() + '\')">Get Photos!</button><br><input id = "bool_favorite_place" type="checkbox" name="bool_favorite_place"/>Favorite?<br>' + this.getTitle());
               infowindow.open(map, this);
           });
        markers.push(marker);

        bounds.extend(place.geometry.location);
       }
    //this resizes the search according to results; don't use.
    map.fitBounds(bounds);
  });
// Bias the SearchBox results towards places that are within the bounds of the
  // current map's viewport.
  google.maps.event.addListener(map, 'bounds_changed', function() {
    var bounds = map.getBounds();
    searchBox.setBounds(bounds);
  });
}
google.maps.event.addDomListener(window, 'load', initialize);

function FavoritedInstagramInit(lat, lng, place_name) {
    myParam = location.search.split('code=')[1];
    if (!myParam)
    {
        document.write("Please Login to instagram first. Redirecting in 3 seconds.");
        setTimeout('Redirect()', 3000);
    }
    else
    {
        document.getElementById('lat').value = lat;
        document.getElementById('lng').value = lng;
        document.getElementById('search_value').value = place_name;
        document.getElementById("instagram_lat_lng").submit();
    }
}

function InstagramInit(lat, lng, place_name) {
    var myParam = location.search.split('code=')[1];
    if (!myParam)
    {
        document.write("Please Login to instagram first. Redirecting in 3 seconds.");
        setTimeout('Redirect()', 3000);
    }
    else
    {
        document.getElementById('lat').value = lat;
        document.getElementById('lng').value = lng;
        document.getElementById('search_value').value = place_name;
        if (document.getElementById('bool_favorite_place').checked) {
            document.getElementById('favorite_place_name').value = place_name;
            document.getElementById('favorite_place_content_string').value = place_name;
        }
        document.getElementById("instagram_lat_lng").submit();
    }
}

function Redirect()
{
   window.location="/login/instagram_login/";
}

